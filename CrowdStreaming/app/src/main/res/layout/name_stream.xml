<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".gui.main.dialogName.CustomDialogFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@color/colorPrimaryDark"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:text="@string/name_dialog_header"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nameStream"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:digits="qwertyuiopñlkjhgfdsazxcvbnmQWERTYUIOPÑLKJHGFDSAZXCVBNM1234567890' 'áéíóú"
        android:hint="@string/name_dialog_hint"
        android:inputType="text"
        android:paddingTop="15dp"
        android:textAlignment="center"
        android:textSize="18sp" />

</LinearLayout>